{
    "manifest_version": 3,
    "name": "Save Image As What",
    "version": "1.0",
    "description": "Save any image as PNG, JPG, or WebP directly from the right-click menu.",
    "permissions": ["contextMenus", "scripting", "activeTab", "downloads"],
    "background": {
      "service_worker": "scripts/background.js"
    },
    "icons": {
      "128": "icons/128.png",
      "48": "icons/48.png",
      "32": "icons/32.png",
      "16": "icons/16.png"
    }
  }